{
  "name": "node-admin",
  "version": "0.0.4",
  "description": "Prototype to test Node.js with Adminbro",
  "main": "index.js",
  "author": "pierluigi-giancola",
  "license": "MIT",
  "scripts": {
    "start": "tsc && NODE_ENV=development node dist/index.js",
    "nodemon": "NODE_ENV=development && nodemon",
    "tsc": "tsc",
    "eslint": "eslint src/**/*.ts --fix",
    "docker-postgres": "docker pull postgres && docker run -p 5432:5432 postgres --name postgres -e POSTGRES_PASSWORD=mysecretpassword -d postgres",
    "postgres": "docker restart postgres",
    "test": "jest",
    "git-cz": "git-cz"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git-cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      ".yarn"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node --transpile-only src/index.ts",
    "ext": "ts"
  },
  "dependencies": {
    "@yarnpkg/pnpify": "^2.0.0-rc.21",
    "admin-bro": "^2.2.8",
    "admin-bro-expressjs": "^2.0.4",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "dotenv-safe": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": ">=4",
    "jest": "^25.5.0",
    "lint-staged": ">=10",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}